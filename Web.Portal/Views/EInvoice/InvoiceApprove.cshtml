<div class="col-md-pull-12">
    <table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt" id="tbl-invoice">
        <thead>
            <tr>
                <th class="all" style="width:3%;font-size:16px;background-color:darkgray !important;text-align:center"></th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important">
                    Số hóa đơn điện tử
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Số HD
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    MAWB
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    HAWB
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Số tiền chưa có thuế GTGT
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Tiền thuế GTGT
                </th>

                <th style="width:20%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Thành Tiền
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Hình thức thanh toán
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Ghi chú HTTT
                </th>
                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Tên Khách hàng
                </th>

                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Mã số thuế
                </th>

                <th style="width:10%;font-size:14px;background-color:darkgray !important;text-align:center">
                    Người lập hóa đơn
                </th>
                @*<th style="width:10%;font-size:16px;background-color:yellow !important;text-align:center">
                    NGÀY TẠO
                </th>
                <th style="width:10%;font-size:16px;background-color:yellow !important;text-align:center">
                    NGÀY HỦY
                </th>
                <th style="width:10%;font-size:16px;background-color:yellow !important;text-align:center">
                    LÝ DO HỦY
                </th>*@

            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Model.Models.HermesInvoice>)ViewData["InvoiceLists"])
            {
                PageCurrent += 1;

                <tr>
                    <td style="font-size:14px">@PageCurrent</td>
                    <td style="font-size:14px">@Html.Raw(row.Sequence.HasValue ? row.Sequence.ToString().PadLeft(7, '0') : "")</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.InvoiceNumber)</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.AWB)</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.Hawb)</td>
                    <td style="font-size:14px">@Html.Raw(row.InvoiceTotalNoVatAmount.ToString("N2"))</td>
                    <td style="font-size:14px">@Html.Raw(row.InvoiceTotalVatAmount.ToString("N2"))</td>

                    <td style="font-size:14px">@Html.Raw(row.InvoiceTotalAmount.ToString("N2"))</td>
                    <td style="font-size:14px">@Html.Raw(row.Payment.Trim().Equals("BANK TFR") ? "Chuyển khoản" : "Tiền mặt")</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.PaymentDescription)</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.KundName)</td>

                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.TaxCode)</td>

                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.PersonName)</td>
                    @*<td>@Html.DisplayTextFor(model => row.Created)</td>
                    <td>@Html.Raw(row.CancelDateTime.HasValue ? row.CancelDateTime.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                    <td>@Html.Raw(string.IsNullOrEmpty(row.CancelReason) ? "" : row.CancelReason)</td>*@
                </tr>
            }
        </tbody>
    </table>

