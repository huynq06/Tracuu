@{
    int rowIndex = 0;
    Layout = "~/Views/Layout/Core.cshtml";
    List<Web.Portal.Common.ViewModel.UldControlViewModel> listUld = (List<Web.Portal.Common.ViewModel.UldControlViewModel>)ViewData["ListUld"];
}
@model Web.Portal.Model.Models.ULDByFlight
<div class='col-md-12 col-xs-12 margin-top-10'>
    <label class='control-label'><b>Chi tiết ULD @Model.Name</b></label>
</div>

<div class="col-lg-12 col-sm-12">
    <table id="tbl-uld" class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr style="">
                <th style="width:5%;font-size:16px;background-color:darkgrey !important;text-align:center;display:none">
                    STT
                </th>
                <th style="width:10%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    MAWB
                </th>
                <th style="width:10%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    Compare
                </th>
                <th style="width:10%;font-size:16px;background-color:darkgrey !important;">
                    @Html.Raw("HAWB")<span style="color:red">(p)</span>
                </th>
                @*<th style="width:10%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    GROUP
                </th>
                <th style="width:10%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    LOCATION
                <th style="width:10%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    PIECES RECEIVED
                </th>
                <th style="width:10%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    PIECES FFM
                </th>*@
              
                
            </tr>
        </thead>
        <tbody>
            @for (int i = 0;i< listUld.Count;i++)
            {
                rowIndex++;
                <tr style = "@Html.Raw(listUld[i].Check==true? "background - color:#FFA07A !important" : "")">
                    <td style="font-size:14px;display:none">@rowIndex</td>
                    <td style="font-size:14px">@Html.Raw(listUld[i].Mawb)</td>
                    <td style="font-size:14px">@Html.Raw((listUld[i].TotalPices != 0 || listUld[i].PiecesFFM != 0) ?listUld[i].TotalPices + "/" + listUld[i].PiecesFFM:"")</td>
                    <td style="font-size:14px">@Html.Raw(!string.IsNullOrEmpty(listUld[i].Hawb.Trim())? (listUld[i].Hawb +" "+ "<span style = \"color:orangered\"> (" + listUld[i].TotalPiecesHawb+") </ span >") :"")</td>
                    @*<td style="font-size:14px">@Html.DisplayTextFor(model => row.GroupNo)</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.Location)</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.PiecesReceived)</td>
                    <td style="font-size:14px">@Html.DisplayTextFor(model => row.PiecesFFM)</td>*@
                 
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    egovutil.CreateTableSort("#tbl-uld", [[0, "asc"]], [

                { "orderable": false, "targets": 0 }
    ], true);
</script>





