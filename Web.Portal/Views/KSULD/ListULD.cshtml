@{
    int rowIndex = 0;
    Layout = "~/Views/Layout/Core.cshtml";
}
<div class='col-md-12 col-xs-12 margin-top-10'>
    <label class='control-label'><b>Danh sách ULD</b></label>
</div>

<div class="col-lg-12 col-sm-12">
    <table  id="tbl-uld" class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr style="">
                <th style="width:20%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    STT
                </th>
                <th style="width:20%;font-size:16px;background-color:darkgrey !important;text-align:center">
                    ULD
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Model.Models.ULDByFlight>)ViewData["ListULD"])
            {
                rowIndex++;
                <tr>
                    <td style="font-size:14px"><a href="/KSULD/ULDDetail?id=@row.ID&uldIns=@row.ULD_ISN" target="_self" class="btn btn-xs flight-asign">@rowIndex</a></td>
                    <td style="font-size:14px"><a href="/KSULD/ULDDetail?id=@row.ID&uldIns=@row.ULD_ISN" target="_self" class="btn btn-xs flight-asign">@Html.DisplayTextFor(model => row.Name)</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

    egovutil.CreateTableSort("#tbl-uld", [[0, "asc"]], [

                { "orderable": false, "targets": 0 }
    ], true);
</script>





