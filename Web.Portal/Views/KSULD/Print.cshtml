
@{
    Layout = "~/Views/Layout/Core.cshtml";
    int PageCurrent = 0;
}
<div style="padding:5px">
    <p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;text-transform:uppercase">
        PHIẾU DỠ HÀNG TỪ ULD
    </p>


    <div class="row" style="padding-bottom:10px">
        <div class="col-md-4 col-lg-4" style="font-family:'Times New Roman';font-size:13pt;">

            <span>Chuyến bay/ Ngày:</span> <span style="color:red">@ViewBag.FlightNo</span>
            <br />
            <span>Bắt đầu chấm hàng:</span> <span style="color:red">@ViewBag.FirstMove</span>
            <br />
        </div>
        <div class="col-md-4 col-lg-4" style="font-family:'Times New Roman';font-size:13pt;">

            <span>Số ULD:</span> <span style="color:red">@ViewBag.ULD</span>
            <br />
            <span>Kết thúc chấm hàng:</span> <span style="color:red">@ViewBag.LastMove</span>
            <br />
        </div>
        <div class="col-md-4 col-lg-4" style="font-family:'Times New Roman';font-size:13pt;">

            <span>Vị trí:</span> <span style="color:red">@ViewBag.Location</span>
            <br />

        </div>
    </div>

    <table style="width:100%" border="1" class="table table-striped table-bordered table-advance table-hover dt-responsive">
        <thead>
            <tr style="">
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    STT
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    MAWB
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    SỐ KIỆN FFM
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    SO SÁNH
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    KẾT QUẢ
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    HAWB_NO
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    GROUP_NO
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    SỐ KIỆN
                </th>
                <th style="width:10%;font-size:13pt;background-color:darkgray !important;text-align:center">
                    VỊ TRÍ
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Common.ViewModel.UldControlViewModel>)ViewData["UldListView"])
            {
                PageCurrent += 1;
                <tr>
                    <td style="width:10%;text-align:center">@PageCurrent</td>
                    <td style="font-size:13pt;width:10%">@Html.DisplayTextFor(model => row.Mawb)</td>
                    <td style="font-size:13pt;width:10%">@Html.Raw(row.PiecesFFM==0? "" : row.PiecesFFM.ToString())</td>
                    <td style="font-size:13pt;width:10%">@Html.Raw(row.Result)</td>
                    <td style="font-size:13pt;width:10%">@Html.Raw(row.Compare)</td>
                    <td style="font-size:13pt;width:10%">@Html.DisplayTextFor(model => row.Hawb)</td>
                    <td style="font-size:13pt;width:10%">@Html.Raw(row.GroupNo)</td>
                    <td style="font-size:13pt;width:10%">@Html.Raw(row.PiecesReceived)</td>
                    <td style="font-size:13pt;width:10%">@Html.Raw(row.Location)</td>
                
                </tr>
            }
        </tbody>
    </table>
</div>







