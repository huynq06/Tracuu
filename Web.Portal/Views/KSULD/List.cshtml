@{
    Layout = "~/Views/Layout/Core.cshtml";
    List<Web.Portal.Common.ViewModel.FlightViewModel> listFlightViewModel = (List<Web.Portal.Common.ViewModel.FlightViewModel>)ViewData["ListFlightViewModel"];

}
<div class="col-lg-12 col-sm-12">
    <table class="table table-striped table-bordered table-advance table-hover dt-responsive">
        <thead>
            <tr style="">
                <th style="width:20%;font-size:16px;background-color:yellow !important;text-align:center">
                    SỐ HIỆU CHUYẾN BAY
                </th>
                <th style="width:10%;font-size:16px;background-color:yellow !important;text-align:center">
                    HẠ CÁNH
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Model.Models.Flight>)ViewData["ListFlight"])
            {
               
                    <tr>
                        <td style="font-size:14px"><a href="/KSULD/ListULD?id=@row.ID&flightID=@row.Flight_Int_Number&flightGuid=@row.FlightID" target="_self" class="btn btn-xs flight-asign">@Html.DisplayTextFor(model => row.FlightNumber)</a></td>
                        <td style="font-size:14px"><a href="/KSULD/ListULD?id=@row.ID&flightID=@row.Flight_Int_Number&flightGuid=@row.FlightID" target="_self" class="btn btn-xs flight-asign">@Html.Raw(row.LandedDate.HasValue ? row.LandedDate.Value.ToString("dd/MM/yyyy HH:mm") : string.Empty)</a></td>
                    </tr>
                   

            }
        </tbody>
    </table>
</div>






