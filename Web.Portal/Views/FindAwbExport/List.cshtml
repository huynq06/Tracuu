<script>
    var Action = {
        Reset: function () {

            $('#awb').val('');
        },
    }
    $("#btn-save").click(function (e) {
        e.preventDefault();
        var awbLog = {}
        awbLog.Labs_Idents = $('#txtFlightID').val();
        awbLog.Note = $('#location').val();
        $.ajax({
            url: '/FindAwbExport/Save',
            type: 'POST',
            data: {
                awbViewModel: JSON.stringify(awbLog)
            },
            dataType: 'json',
            success: function (data) {
                setTimeout(function () {
                    egovutil.MessageToast(data.Type, data.Title, data.Message);
                }, 200);
                setTimeout(function () {
                    egovutil.getContentCallBack("#content-list-result", "/FindAwbExport/list?awb=" + $('#txtFlightID').val(), Action.Reset);
                }, 500);
            }
        });
    })
</script>
  