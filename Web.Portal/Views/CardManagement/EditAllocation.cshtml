
@{
    Layout = null;
}
@model Web.Portal.Model.Models.QLT.User
<form class="form-horizontal" id="frmAction">
    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <input type="hidden" name="keyCardValue" value="@ViewBag.CardID" />
    <div class="form-body">
        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>Mã Nhân viên:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" readonly placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.UserID)" name="userId" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP MÔ TẢ</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Tên Nhân Viên:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" readonly placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.UserName)" name="staff" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP TÊN NV</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Mã thẻ:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName uppercase" placeholder="Mô tả" maxlength="256" name="cardID" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP mã thẻ</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Ngày bắt đầu:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline date-picker" value="@DateTime.Now.ToString("dd/MM/yyyy")" id="ata" placeholder="ATA" maxlength="20" data-date-format="dd/mm/yyyy" name="startDate" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập ngày</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Ngày hết hạn:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline date-picker" value="@DateTime.Now.ToString("dd/MM/yyyy")" id="ata" placeholder="ATA" maxlength="20" data-date-format="dd/mm/yyyy" name="expiredDate" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập ngày</span>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>
    <!-- /.box-footer -->
</form>
<script>
    $('.date-picker').datepicker({
        rtl: App.isRTL(),
        orientation: "left",
        autoclose: true
    });
    var message = {};
    var rule = {};
    egovutil.submit("#frmAction", rule, message, "/CardManagement/SaveAllocation");
