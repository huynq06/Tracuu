@{
    Layout = null;
    int rowIndex = 0;
}
<table id="tbl-hawb" class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th style="width:3%;text-align:center">
                STT
            </th>
            <th style="width:10%;text-align:center">
                Biển số xe
            </th>
            <th style="width:10%;text-align:center">
                AWB
            </th>
            <th style="width:10%;text-align:center">
                CMT
            </th>
            <th style="width:10%;text-align:center">
                Tên LX
            </th>
            <th style="width:10%;text-align:center">
                TG Đăng ký
            </th>
            <th style="width:10%;text-align:center">
                Trạng Thái
            </th>
            <th style="width:10%;text-align:center">
                NV Đăng ký
            </th>
            <th style="width:10%;text-align:center">
                FLIGHT
            </th>



        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Model.tblDangKyGoiXe>)ViewData["listTruck"])
        {
            rowIndex += 1;

        <tr>
            <td align="center">@rowIndex</td>

            <td align="center">@Html.Raw(row.BienSoXe)</td>

            <td align="center">
                @Html.DisplayTextFor(model => row.LoHang)
            </td>
            <td align="center">
                @Html.DisplayTextFor(model => row.SoCMND)
            </td>
            <td align="center">
                @Html.DisplayTextFor(model => row.TenLaiXe)
            </td>
            <td align="center">
                @Html.Raw(row.ThoiGianDangKy.HasValue ? row.ThoiGianDangKy.Value.ToString("dd-MM-yy HH:mm") : "")
            </td>
            <td align="center">
                @Html.Raw(row.TruckStatus >= 2 ? "ĐÃ VÀO" : "CHƯA VÀO")
            </td>
            <td align="center">@Html.Raw(row.UserName)</td>
            <td align="center">@Html.Raw(row.Remark)</td>

        </tr>
        }
    </tbody>
</table>

<script>


    egovutil.CreateTableSort("#tbl-hawb", [[0, "asc"]], [

                { "orderable": false, "targets": 0 }
    ], true);
</script>
