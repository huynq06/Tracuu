@{
    Layout = null;
    int PageCurrent = 0;

}
<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;text-transform:uppercase">
    BÁO CÁO HÀNG CHUYỂN KHO @ViewBag.WareHouse <br/>Từ ngày @ViewBag.FromDate - @ViewBag.ToDate</p>
<p style="text-align:left;font-family:'Times New Roman';font-size:15pt;font-weight:bold">
   <span>TỔNG SỐ LÔ:</span> <span style="color:red">@ViewBag.TotalRecord</span>
   <span>TỔNG SỐ KIỆN:</span> <span style="color:red">@ViewBag.SUMPCS</span>
   <span>TỔNG SỐ CÂN:</span> <span style="color:red">@ViewBag.SumGW</span></p>
<table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">


    <thead>
        <tr style="background-color:yellow;color:black;font-weight:bold">
            <th style="width:5%">No</th>
            <th class="all" style="width:5%">WH</th>
            <th style="width:10%">
               MAWB
            </th>
            <th style="width:10%">
                HAWB
            </th>       
            <th style="width:10%">
                PIECES
            </th>
            <th style="width:10%">
                WEIGHT
            </th>
            <th style="width:10%">
                FLIGHT
            </th>
            <th style="width:10%">
                ATA DATE
            </th>
            <th style="width:10%">
                ATA TIME
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                CREATED MOVE
            </th>
            <th style="width:10%">
                SDD
            </th>
            <th style="width:10%">
                STK
            </th>
        </tr> 
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
            PageCurrent+= 1;

            <tr style="@Html.Raw(string.IsNullOrEmpty(row.SDD)? "background-color:#FFA07A !important" : "")">
                <td>@PageCurrent</td>
                <td>@Html.DisplayTextFor(model => row.WareHouse)</td>
                <td>@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.AWB)</td>
                <td>@Html.DisplayTextFor(Model => row.HAWB)</td>               
                <td>@Html.DisplayTextFor(model => row.QuantityReceived)</td>
                <td>@Html.DisplayTextFor(model => row.WeightReceived)</td>
                <td>@Html.DisplayTextFor(model => row.FlightNo)</td>
                <td>@Html.Raw(row.FlightDate.HasValue?row.FlightDate.Value.ToString("dd/MM/yyyy"):string.Empty)</td>
                <td>@Html.DisplayTextFor(model => row.ATATIME)</td>
                <td>@Html.Raw(row.AgenCreated.HasValue ? row.AgenCreated.Value.ToString("dd/MM/yyyy HH:mm:ss") : string.Empty)</td>
                <td><a href="#">@Html.DisplayTextFor(model => row.SDD)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.STK)</a></td>
           </tr>
        }
    </tbody>

</table>
<p style="text-align:center;font-family:'Times New Roman';font-size:13pt;font-weight:bold;text-transform:uppercase">

</p>
<div style="margin-top:200px;padding-top:50px;">
    <table style="width:100%;" border="0">
        <tr style="font-family:'Times New Roman';font-size:12pt;font-weight:bold;text-transform:uppercase">
            <td colspan="3" align="center"><strong>Người lập báo cáo</strong></td>
            <td colspan="6"></td>
            @*<td align="center"><strong>Người kiểm soát</strong></td>*@
        </tr>
    </table>

</div>
